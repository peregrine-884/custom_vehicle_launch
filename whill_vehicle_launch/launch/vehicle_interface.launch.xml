<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="vehicle_id" default="$(env VEHICLE_ID default)"/>

  <arg name="whill_driver_config" default="$(find-pkg-share whill_bringup)/params.yaml"/>
  <arg name="whill_config" default="$(find-pkg-share common_whill_vehicle)/config/params.yaml"/>

  <group>
    <!-- whill_driver ノード -->
    <node pkg="whill_driver" exec="whill" output="screen">
      <param from="$(var whill_driver_config)"/>
    </node>

    <!-- joy ノード -->
    <node pkg="joy" exec="joy_node" output="screen"/>

    <!-- whill_controller ノード -->
    <node pkg="common_whill_vehicle" exec="whill_controller" output="screen">
      <param from="$(var whill_config)"/>
    </node>

    <!-- whill_interface ノード -->
    <node pkg="common_whill_vehicle" exec="whill_interface" output="screen">
      <param from="$(var whill_config)"/>
    </node>
  </group>
</launch>